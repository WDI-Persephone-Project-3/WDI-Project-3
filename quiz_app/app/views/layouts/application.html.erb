<!DOCTYPE html>
<html>
<head>
  <title>QuizApp</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="header">
    <p>QuizApp</p>
    <% if @current_user %>
      <p><%= current_user.email %> / </p>
      <p><a href="/logout">Log Out</a></p>
    <% else %>
      <%= link_to 'Log In', '/login' %>
      <%= link_to 'Sign Up', '/signup' %>
    <% end %>
  <%= yield :header %>
  </div>

  <div class="container">
    <% if @current_user %>
      <h1><%= current_user.first_name %></h1>
    <% else %>
      <h1>Welcome to QuizApp!</h1>
    <% end %>

  <%= yield %>
  </div>

  <div class="footer">
    <p>Copyright @ Team S.O.D.A.S.</p>
  </div>

</body>
</html>
